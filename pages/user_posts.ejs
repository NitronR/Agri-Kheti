<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgriKheti</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cookie">
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" href="assets/css/Pretty-Registration-Form.css">
    <link rel="stylesheet" href="assets/css/Pretty-Footer.css">
    <link rel="stylesheet" href="assets/css/formdiv.css">
    <link rel="stylesheet" href="assets/css/header.css">
    <link rel="stylesheet" href="assets/izimodal/iziModal.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="scripts/my_posts.js"></script>
    <style>
      header span{
        font-family: 'Cookie' !important
      }
      #supply,#demand{
        padding: 10px;
      }
    </style>
</head>

<body>
  <header class="header_background header_background_2">
		<h1 class="text-center"><span class="color1">Agri</span><span class="color2">Kheti</span></h1>
	</header>
    <% include nav.ejs %>
    <button type="button" class='btn btn-default' id='add_post'>Add post</button>
    <div id='my_posts'>

    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id='modal-add-post'>
      <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5>Add post</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                  <label for="name-input-field" class="control-label">Crop type : </label>
                  <input type="text" class="form-control" id="crop-type"/>
              </div>

              <div class="form-group">
                  <label for="name-input-field" class="control-label">Crop quantity (in Kgs) : </label>
                  <input type="number" class="form-control" id="crop-quantity"/>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default submit-button" id='confirm-add-post'>Add post</button>
              <button type="button" class="btn btn-default submit-button" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
</body>

</html>
